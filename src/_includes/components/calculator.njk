{# ROI Calculator Component #}
<section class="py-20 bg-gradient-to-b from-gray-50 to-white" id="hesaplayici">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">
                {{ translations.calculator.title }}
            </h2>
            <p class="text-xl text-gray-600">
                {{ translations.calculator.subtitle }}
            </p>
        </div>

        <div class="max-w-4xl mx-auto bg-gradient-to-br from-blue-50/50 to-green-50/50 rounded-2xl p-8 md:p-12 shadow-xl">
            <div class="grid md:grid-cols-2 gap-12">
                {# Input Sliders #}
                <div>
                    {# Power Slider #}
                    <div class="mb-8">
                        <label class="block text-sm font-semibold text-gray-700 mb-3">
                            {{ translations.calculator.power }}
                        </label>
                        <input type="range" min="10" max="1000" value="100"
                               class="w-full h-2 rounded-full bg-gray-200 appearance-none cursor-pointer"
                               id="powerSlider">
                        <div class="flex justify-between text-sm text-gray-600 mt-2">
                            <span>10 kWp</span>
                            <span class="font-bold text-primary" id="powerValue">100 kWp</span>
                            <span>1000 kWp</span>
                        </div>
                    </div>

                    {# Production Slider #}
                    <div class="mb-8">
                        <label class="block text-sm font-semibold text-gray-700 mb-3">
                            {{ translations.calculator.production }}
                        </label>
                        <input type="range" min="10000" max="1500000" value="150000" step="10000"
                               class="w-full h-2 rounded-full bg-gray-200 appearance-none cursor-pointer"
                               id="productionSlider">
                        <div class="flex justify-between text-sm text-gray-600 mt-2">
                            <span>10K</span>
                            <span class="font-bold text-primary" id="productionValue">150,000 kWh</span>
                            <span>1.5M</span>
                        </div>
                    </div>

                    {# Price Slider #}
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-3">
                            {{ translations.calculator.price }}
                        </label>
                        <input type="range" min="0.5" max="5" value="2.5" step="0.1"
                               class="w-full h-2 rounded-full bg-gray-200 appearance-none cursor-pointer"
                               id="priceSlider">
                        <div class="flex justify-between text-sm text-gray-600 mt-2">
                            <span>0.5 ₺</span>
                            <span class="font-bold text-primary" id="priceValue">2.5 ₺</span>
                            <span>5 ₺</span>
                        </div>
                    </div>
                </div>

                {# Results #}
                <div class="bg-white rounded-xl p-8 shadow-lg">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6">{{ translations.calculator.results }}</h3>

                    <div class="space-y-6">
                        <div class="border-b pb-4">
                            <div class="text-sm text-gray-600 mb-1">{{ translations.calculator.efficiencyGain }}</div>
                            <div class="text-4xl font-extrabold bg-gradient-to-r from-primary to-green-500 bg-clip-text text-transparent" id="efficiencyGain">6,000 kWh</div>
                        </div>

                        <div class="border-b pb-4">
                            <div class="text-sm text-gray-600 mb-1">{{ translations.calculator.annualSavings }}</div>
                            <div class="text-4xl font-bold text-green-600" id="annualSavings">₺ 15,000</div>
                        </div>

                        <div class="border-b pb-4">
                            <div class="text-sm text-gray-600 mb-1">{{ translations.calculator.tenYearSavings }}</div>
                            <div class="text-3xl font-bold text-primary" id="tenYearSavings">₺ 150,000</div>
                        </div>

                        <div class="bg-green-50 rounded-lg p-4">
                            <div class="text-sm text-gray-700 mb-1">{{ translations.calculator.co2Reduction }}</div>
                            <div class="text-2xl font-bold text-green-700" id="co2Reduction">3.0 ton</div>
                        </div>
                    </div>

                    <a href="/{{ lang }}/iletisim/" class="block w-full mt-6 bg-gradient-to-r from-primary to-blue-500 text-white py-4 rounded-lg font-bold text-lg text-center hover:shadow-lg transition-all">
                        {{ translations.calculator.getReport }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
