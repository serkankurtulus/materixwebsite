{# Footer Component #}
<footer class="bg-gray-900 text-white">
    {# CTA Section #}
    <div class="bg-primary">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    {{ translations.cta.title }}
                </h2>
                <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
                    {{ translations.cta.description }}
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="{{ translations.urls.contact }}" class="bg-white text-primary px-8 py-4 rounded-lg font-bold text-lg hover:bg-blue-50 transition-all hover:scale-105">
                        {{ translations.cta.primaryButton }}
                    </a>
                    <a href="tel:{{ site.contact.phone | replace(' ', '') }}" class="border-2 border-white text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-white hover:text-primary transition-all">
                        {{ site.contact.phone }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Main Footer #}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
            {# Company Info #}
            <div>
                <a href="/{{ lang }}/" class="inline-block mb-4">
                    <img src="/assets/images/materix-logo.png"
                         alt="{{ site.name }} Logo"
                         class="h-8 brightness-0 invert"
                         onerror="this.onerror=null; this.innerHTML='<span class=\'text-2xl font-bold\'>MATERIX</span>';">
                </a>
                <p class="text-gray-400 mb-6">
                    {{ translations.footer.tagline }}
                </p>
                {# Social Links #}
                <div class="flex space-x-4">
                    {% if site.social.facebook %}
                    <a href="{{ site.social.facebook }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary transition-colors" aria-label="Facebook">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5h-4.33C10.24.5,9.5,3.44,9.5,5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4Z"/></svg>
                    </a>
                    {% endif %}
                    {% if site.social.linkedin %}
                    <a href="{{ site.social.linkedin }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary transition-colors" aria-label="LinkedIn">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447,20.452H16.893V14.883c0-1.328-.027-3.037-1.852-3.037-1.853,0-2.136,1.445-2.136,2.939v5.667H9.351V9h3.414v1.561h.046a3.745,3.745,0,0,1,3.37-1.85c3.6,0,4.267,2.37,4.267,5.455v6.286ZM5.337,7.433a2.064,2.064,0,1,1,2.063-2.065A2.064,2.064,0,0,1,5.337,7.433Zm1.782,13.019H3.555V9H7.119ZM22.225,0H1.771A1.75,1.75,0,0,0,0,1.729V22.271A1.749,1.749,0,0,0,1.771,24H22.222A1.756,1.756,0,0,0,24,22.271V1.729A1.756,1.756,0,0,0,22.222,0Z"/></svg>
                    </a>
                    {% endif %}
                    {% if site.social.twitter %}
                    <a href="{{ site.social.twitter }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary transition-colors" aria-label="Twitter">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                    </a>
                    {% endif %}
                    {% if site.social.instagram %}
                    <a href="{{ site.social.instagram }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary transition-colors" aria-label="Instagram">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12,2.163c3.204,0,3.584.012,4.85.07,3.252.148,4.771,1.691,4.919,4.919.058,1.265.069,1.645.069,4.849s-.012,3.584-.069,4.849c-.149,3.225-1.664,4.771-4.919,4.919-1.266.058-1.644.07-4.85.07s-3.584-.012-4.849-.07c-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849s.013-3.583.07-4.849C2.381,3.924,3.896,2.38,7.151,2.232,8.417,2.175,8.796,2.163,12,2.163ZM12,0C8.741,0,8.333.014,7.053.072,2.695.272.273,2.69.073,7.052.014,8.333,0,8.741,0,12s.014,3.668.072,4.948c.2,4.358,2.618,6.78,6.98,6.98C8.333,23.986,8.741,24,12,24s3.668-.014,4.948-.072c4.354-.2,6.782-2.618,6.979-6.98.059-1.28.073-1.689.073-4.948s-.014-3.667-.072-4.947c-.196-4.354-2.617-6.78-6.979-6.98C15.668.014,15.259,0,12,0Zm0,5.838A6.162,6.162,0,1,0,18.162,12,6.162,6.162,0,0,0,12,5.838ZM12,16a4,4,0,1,1,4-4A4,4,0,0,1,12,16ZM18.406,4.155a1.44,1.44,0,1,0,1.44,1.44A1.44,1.44,0,0,0,18.406,4.155Z"/></svg>
                    </a>
                    {% endif %}
                </div>
            </div>

            {# Products Links #}
            <div>
                <h4 class="font-bold text-lg mb-4">{{ translations.footer.products }}</h4>
                <ul class="space-y-3">
                    <li>
                        <a href="{{ translations.urls.ssrPro }}" class="text-gray-400 hover:text-white transition-colors">
                            {{ translations.products.ssrPro.name }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ translations.urls.ssrStandard }}" class="text-gray-400 hover:text-white transition-colors">
                            {{ translations.products.ssrStandard.name }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ translations.urls.ssrIndustrial }}" class="text-gray-400 hover:text-white transition-colors">
                            {{ translations.products.ssrIndustrial.name }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ translations.urls.contact }}" class="text-gray-400 hover:text-white transition-colors">
                            {{ translations.footer.pricing }}
                        </a>
                    </li>
                </ul>
            </div>

            {# Company Links #}
            <div>
                <h4 class="font-bold text-lg mb-4">{{ translations.footer.company }}</h4>
                <ul class="space-y-3">
                    <li>
                        <a href="{{ translations.urls.corporate }}" class="text-gray-400 hover:text-white transition-colors">
                            {{ translations.footer.about }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ translations.urls.nanotechnology }}" class="text-gray-400 hover:text-white transition-colors">
                            {{ translations.footer.technology }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ translations.urls.projects }}" class="text-gray-400 hover:text-white transition-colors">
                            {{ translations.footer.references }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ translations.urls.blog }}" class="text-gray-400 hover:text-white transition-colors">
                            {{ translations.nav.blog }}
                        </a>
                    </li>
                </ul>
            </div>

            {# Contact Info #}
            <div>
                <h4 class="font-bold text-lg mb-4">{{ translations.footer.contact }}</h4>
                <ul class="space-y-3 text-gray-400">
                    <li class="flex items-start">
                        <svg class="w-5 h-5 mr-3 mt-0.5 flex-shrink-0 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        <span>{{ site.contact.address[lang] }}</span>
                    </li>
                    <li class="flex items-center">
                        <svg class="w-5 h-5 mr-3 flex-shrink-0 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        <a href="mailto:{{ site.contact.email }}" class="hover:text-white transition-colors">
                            {{ site.contact.email }}
                        </a>
                    </li>
                    <li class="flex items-center">
                        <svg class="w-5 h-5 mr-3 flex-shrink-0 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                        </svg>
                        <a href="tel:{{ site.contact.phone | replace(' ', '') }}" class="hover:text-white transition-colors">
                            {{ site.contact.phone }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        {# Bottom Bar #}
        <div class="border-t border-gray-800 pt-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <p class="text-gray-400 text-sm mb-4 md:mb-0">
                    © {% year %} {{ site.name }}. {% if lang == 'tr' %}Tüm hakları saklıdır.{% else %}All rights reserved.{% endif %}
                </p>
                <div class="flex space-x-6 text-sm">
                    <a href="{{ translations.urls.privacy }}" class="text-gray-400 hover:text-white transition-colors">
                        {{ translations.footer.privacy }}
                    </a>
                    <a href="{{ translations.urls.terms }}" class="text-gray-400 hover:text-white transition-colors">
                        {{ translations.footer.terms }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>
