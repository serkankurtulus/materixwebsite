{# Product Card Component #}
{# Usage: {% include "components/product-card.njk" with product=productData %} #}

<div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:-translate-y-2 hover:shadow-xl transition-all duration-300 border border-gray-100">
    {# Card Header with Gradient #}
    <div class="h-48 flex items-center justify-center {{ product.gradientClass or 'bg-gradient-to-br from-blue-500 to-blue-700' }}">
        {% if product.icon %}
        <div class="text-white text-6xl">{{ product.icon }}</div>
        {% elif product.image %}
        <img src="{{ product.image }}" alt="{{ product.name }}" class="w-full h-full object-cover">
        {% else %}
        <div class="text-white text-6xl">ðŸ”¬</div>
        {% endif %}
    </div>

    {# Card Body #}
    <div class="p-8">
        {# Badge/Tag #}
        {% if product.tagline %}
        <div class="inline-block px-3 py-1 {{ product.taglineClass or 'bg-green-100 text-green-700' }} rounded-full text-sm font-semibold mb-4">
            {{ product.tagline }}
        </div>
        {% endif %}

        {# Title #}
        <h3 class="text-2xl font-bold text-gray-900 mb-3">{{ product.name }}</h3>

        {# Description #}
        <p class="text-gray-600 mb-6">{{ product.description }}</p>

        {# Features List #}
        {% if product.features %}
        <ul class="space-y-3 mb-6">
            {% for feature in product.features %}
            <li class="flex items-start">
                <svg class="w-6 h-6 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">{{ feature }}</span>
            </li>
            {% endfor %}
        </ul>
        {% endif %}

        {# Price #}
        {% if product.price %}
        <div class="flex justify-between items-center mb-4">
            <div>
                <div class="text-sm text-gray-600">
                    {% if lang == 'tr' %}Fiyat{% else %}Price{% endif %}
                </div>
                <div class="text-2xl font-bold text-primary">{{ product.price }}</div>
            </div>
        </div>
        {% endif %}

        {# CTA Button #}
        <a href="{{ product.link or '#' }}" class="block w-full text-center {{ product.buttonClass or 'bg-gradient-to-r from-primary to-blue-500 text-white' }} py-3 rounded-lg font-semibold hover:shadow-lg transition-all">
            {{ product.buttonText or (translations.common.viewDetails if translations else 'View Details') }}
        </a>
    </div>
</div>
