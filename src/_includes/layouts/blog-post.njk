---
layout: layouts/base.njk
---

{# Blog Post Layout #}

{# Hero Section #}
<section class="pt-32 pb-16 relative overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
        <span class="text-[300px] opacity-10">üìù</span>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center text-white">
            {# Category Badge #}
            {% if category %}
            <div class="inline-block px-4 py-2 bg-white/20 rounded-full text-sm font-semibold mb-4">
                {{ category }}
            </div>
            {% endif %}

            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">{{ title }}</h1>

            {# Meta info #}
            <div class="flex items-center justify-center gap-6 text-white/80 text-sm">
                {% if date %}
                <span class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/></svg>
                    {{ date | localizedDate(lang) }}
                </span>
                {% endif %}
                {% if author %}
                <span class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/></svg>
                    {{ author }}
                </span>
                {% endif %}
                {% if readTime %}
                <span class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/></svg>
                    {{ readTime }}
                </span>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{# Article Content #}
<article class="py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        {# Featured Image #}
        {% if featuredImage %}
        <div class="mb-10 -mt-20 relative z-10">
            <img src="{{ featuredImage }}" alt="{{ title }}" class="w-full h-80 object-cover rounded-2xl shadow-2xl">
        </div>
        {% endif %}

        {# Article Body #}
        <div class="blog-content">
            {{ content | safe }}
        </div>

        {# Tags #}
        {% if tags and tags.length > 0 %}
        <div class="mt-12 pt-8 border-t border-gray-200">
            <div class="flex flex-wrap gap-2">
                {% for tag in tags %}
                {% if tag != 'blog_tr' and tag != 'blog_en' %}
                <span class="px-4 py-2 bg-purple-100 text-purple-700 rounded-full text-sm font-medium">
                    #{{ tag }}
                </span>
                {% endif %}
                {% endfor %}
            </div>
        </div>
        {% endif %}

        {# Share Section #}
        <div class="mt-12 pt-8 border-t border-gray-200">
            <h3 class="text-lg font-bold text-gray-900 mb-4">
                {% if lang == 'tr' %}Bu yazƒ±yƒ± payla≈ü{% else %}Share this article{% endif %}
            </h3>
            <div class="flex gap-4">
                <a href="https://twitter.com/intent/tweet?url={{ site.url }}{{ page.url }}&text={{ title }}" target="_blank" class="w-10 h-10 bg-gray-100 hover:bg-blue-500 hover:text-white rounded-full flex items-center justify-center transition-colors">
                    <span class="text-lg">ùïè</span>
                </a>
                <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ site.url }}{{ page.url }}" target="_blank" class="w-10 h-10 bg-gray-100 hover:bg-blue-700 hover:text-white rounded-full flex items-center justify-center transition-colors">
                    <span class="text-lg">in</span>
                </a>
                <a href="https://www.facebook.com/sharer/sharer.php?u={{ site.url }}{{ page.url }}" target="_blank" class="w-10 h-10 bg-gray-100 hover:bg-blue-600 hover:text-white rounded-full flex items-center justify-center transition-colors">
                    <span class="text-lg">f</span>
                </a>
            </div>
        </div>
    </div>
</article>

{# Back to Blog CTA #}
<section class="py-12 bg-gray-100">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <a href="{{ translations.urls.blog }}" class="inline-flex items-center gap-2 text-purple-600 hover:text-purple-700 font-semibold">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
            {% if lang == 'tr' %}T√ºm Yazƒ±lara D√∂n{% else %}Back to All Posts{% endif %}
        </a>
    </div>
</section>
