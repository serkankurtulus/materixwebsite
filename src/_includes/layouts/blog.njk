---
layout: layouts/base.njk
---

{# Blog Page Layout - Matches Original blog.html Design #}

{# Hero Section - Purple gradient with emoji background #}
<section class="pt-32 pb-20 relative overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    {# Emoji background overlay #}
    <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
        <span class="text-[400px] opacity-10">üìù</span>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center text-white">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">{{ hero.title }}</h1>
            {% if hero.description %}
            <p class="text-xl md:text-2xl max-w-3xl mx-auto opacity-95">{{ hero.description }}</p>
            {% endif %}
        </div>
    </div>
</section>

{# Blog Posts Section - Show if posts exist #}
{% set blogPosts = collections.blog_tr if lang == 'tr' else collections.blog_en %}
{% if blogPosts and blogPosts.length > 0 %}
<section class="py-20 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for post in blogPosts | reverse %}
            <article class="bg-white rounded-2xl overflow-hidden shadow-lg hover:-translate-y-2 transition-all duration-300">
                {% if post.data.featuredImage %}
                <a href="{{ post.url }}">
                    <img src="{{ post.data.featuredImage }}" alt="{{ post.data.title }}" class="w-full h-48 object-cover">
                </a>
                {% else %}
                <div class="w-full h-48 bg-gradient-to-br from-purple-500 to-purple-700 flex items-center justify-center">
                    <span class="text-6xl text-white/30">üìù</span>
                </div>
                {% endif %}
                <div class="p-6">
                    {% if post.data.category %}
                    <span class="inline-block px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-xs font-semibold mb-3">
                        {{ post.data.category }}
                    </span>
                    {% endif %}
                    <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2">
                        <a href="{{ post.url }}" class="hover:text-purple-600 transition-colors">
                            {{ post.data.title }}
                        </a>
                    </h3>
                    <p class="text-gray-600 text-sm mb-4 line-clamp-3">{{ post.data.description }}</p>
                    <div class="flex items-center justify-between text-sm text-gray-500">
                        <span>{{ post.data.date | localizedDate(lang) }}</span>
                        {% if post.data.readTime %}
                        <span>{{ post.data.readTime }}</span>
                        {% endif %}
                    </div>
                </div>
            </article>
            {% endfor %}
        </div>
    </div>
</section>
{% else %}
{# Empty State Section - Coming Soon #}
{% if emptyState %}
<section class="py-24 bg-gray-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="text-9xl mb-8 opacity-30">{{ emptyState.icon }}</div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">{{ emptyState.title }}</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-10 leading-relaxed">{{ emptyState.description }}</p>

        {# Subscribe Form #}
        <form class="max-w-lg mx-auto flex flex-col sm:flex-row gap-3" onsubmit="handleBlogSubscribe(event)">
            <input
                type="email"
                placeholder="{% if lang == 'tr' %}E-posta adresiniz{% else %}Your email address{% endif %}"
                required
                class="flex-1 px-6 py-4 text-base border-2 border-gray-300 rounded-full focus:outline-none focus:border-purple-500 font-sans"
            >
            <button
                type="submit"
                class="px-10 py-4 text-white font-semibold rounded-full hover:scale-105 transition-transform"
                style="background: linear-gradient(135deg, #667eea, #764ba2);"
            >
                {% if lang == 'tr' %}Abone Ol{% else %}Subscribe{% endif %}
            </button>
        </form>
    </div>
</section>
{% endif %}
{% endif %}

{# Topics Section - Grid of topic cards #}
{% if topics %}
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-4 relative pb-4">
            {{ topicsSection.title }}
            <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-gradient-to-r from-purple-500 to-purple-700"></span>
        </h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mt-16">
            {% for topic in topics %}
            <div class="p-10 rounded-2xl text-center cursor-pointer hover:-translate-y-3 transition-transform duration-300 hover:shadow-xl" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
                <div class="text-6xl mb-5">{{ topic.icon }}</div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">{{ topic.title }}</h3>
                <p class="text-gray-600 leading-relaxed">{{ topic.description }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# Coming Soon Section - Dark navy with social links #}
{% if comingSoon %}
<section class="py-20" style="background: linear-gradient(135deg, #0f3460 0%, #16213e 100%);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">{{ comingSoon.title }}</h2>
        {% for paragraph in comingSoon.content %}
        <p class="text-xl opacity-90 mb-4">{{ paragraph }}</p>
        {% endfor %}

        {# Social Links #}
        {% if comingSoon.socials %}
        <div class="flex justify-center gap-5 mt-10">
            {% for social in comingSoon.socials %}
            <a href="{{ social.url }}" class="w-16 h-16 rounded-full flex items-center justify-center text-3xl hover:scale-110 transition-transform" style="background: rgba(255,255,255,0.1);">
                {{ social.icon }}
            </a>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</section>
{% endif %}

