{# Homepage Layout with all sections #}

{# Hero Section #}
<section class="pt-12 pb-20 bg-gradient-to-br from-primary via-blue-500 to-accent relative overflow-hidden">
    {# Background decoration #}
    <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 left-10 w-72 h-72 bg-white rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-white rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="text-white">
                {# Badge #}
                <div class="inline-block px-4 py-2 bg-white/20 rounded-full text-sm font-semibold mb-6 backdrop-blur-sm">
                    üöÄ {{ translations.hero.badge }}
                </div>

                {# Title #}
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
                    {{ translations.hero.title }}<br>
                    <span class="text-green-300">{{ translations.hero.titleHighlight }}</span><br>
                    {{ translations.hero.titleEnd }}
                </h1>

                {# Description #}
                <p class="text-xl mb-8 text-blue-100">
                    {{ translations.hero.description }}
                </p>

                {# CTA Buttons #}
                <div class="flex flex-wrap gap-4">
                    <a href="/{{ lang }}/iletisim/" class="bg-white text-primary px-8 py-4 rounded-lg font-bold text-lg hover:bg-blue-50 transition-all hover:scale-105 shadow-xl">
                        {{ translations.hero.ctaPrimary }}
                    </a>
                    <a href="/{{ lang }}/urunlerimiz/" class="bg-transparent text-white px-8 py-4 rounded-lg font-bold text-lg border-2 border-white hover:bg-white hover:text-primary transition-all">
                        {{ translations.hero.ctaSecondary }}
                    </a>
                </div>

                {# Trust Indicators #}
                <div class="flex items-center gap-8 mt-12 pt-8 border-t border-white/20">
                    <div>
                        <div class="text-3xl font-bold">{{ site.stats.customers }}</div>
                        <div class="text-blue-200 text-sm">{{ translations.stats.customers }}</div>
                    </div>
                    <div>
                        <div class="text-3xl font-bold">{{ site.stats.applicationArea }}</div>
                        <div class="text-blue-200 text-sm">{{ translations.stats.applicationArea }}</div>
                    </div>
                    <div>
                        <div class="text-3xl font-bold">{{ site.stats.satisfaction }}</div>
                        <div class="text-blue-200 text-sm">{{ translations.stats.satisfaction }}</div>
                    </div>
                </div>
            </div>

            {# Hero Image #}
            <div class="relative hidden md:block">
                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 animate-float">
                    <img src="https://images.unsplash.com/photo-1509391366360-2e959784a276?w=600&h=800&fit=crop"
                         alt="Solar Panel"
                         class="rounded-lg w-full shadow-2xl">
                    <div class="absolute -bottom-6 -right-6 bg-accent text-white px-6 py-4 rounded-xl shadow-2xl">
                        <div class="text-3xl font-bold">+8%</div>
                        <div class="text-sm">{% if lang == 'tr' %}Verim Artƒ±≈üƒ±{% else %}Efficiency Gain{% endif %}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

