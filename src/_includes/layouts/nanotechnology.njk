---
layout: layouts/base.njk
---

{# Nanotechnology Page Layout - Matches Original nanoteknoloji.html Design #}

{# Hero Section - Purple gradient #}
<section class="pt-32 pb-20 relative overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="absolute inset-0" style="background: radial-gradient(circle at 20% 50%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 80% 30%, rgba(255,255,255,0.08) 0%, transparent 50%);"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center text-white">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">{{ hero.title }}</h1>
            {% if hero.description %}
            <p class="text-xl md:text-2xl max-w-3xl mx-auto opacity-95">{{ hero.description }}</p>
            {% endif %}
        </div>
    </div>
</section>

{# Services Section - 6 cards with colored borders #}
{% if services %}
<section class="py-20 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-4 relative pb-4">
            {{ servicesSection.title }}
            <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-gradient-to-r from-purple-500 to-purple-700"></span>
        </h2>
        <p class="text-center text-lg text-gray-600 mb-16 max-w-3xl mx-auto">{{ servicesSection.subtitle }}</p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
            {% set colors = ['#667eea', '#f093fb', '#00d4ff', '#f5576c', '#4facfe', '#43e97b'] %}
            {% for service in services %}
            <div class="bg-white p-10 rounded-2xl shadow-xl hover:-translate-y-2 transition-transform duration-300" style="border-top: 4px solid {{ colors[loop.index0 % 6] }};">
                <div class="w-16 h-16 rounded-full flex items-center justify-center text-3xl text-white mb-6" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                    {{ service.icon }}
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{{ service.title }}</h3>
                <p class="text-gray-600 leading-relaxed">{{ service.description }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# Technologies Section - Dark with glass cards #}
{% if technologies %}
<section class="py-20" style="background: linear-gradient(135deg, #0f3460 0%, #16213e 100%);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-center text-white mb-4">{{ technologiesSection.title }}</h2>
        <p class="text-center text-lg text-gray-300 mb-12">{{ technologiesSection.subtitle }}</p>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for tech in technologies %}
            <div class="p-8 rounded-2xl text-center border border-white/20 backdrop-blur-sm" style="background: rgba(255, 255, 255, 0.1);">
                <h4 class="text-xl font-bold text-cyan-400 mb-4">{{ tech.title }}</h4>
                <p class="text-white/90 leading-relaxed">{{ tech.description }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# Benefits Section - 6 icon items #}
{% if benefits %}
<section class="py-20 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-4 relative pb-4">
            {{ benefitsSection.title }}
            <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-gradient-to-r from-purple-500 to-purple-700"></span>
        </h2>
        <p class="text-center text-lg text-gray-600 mb-12 max-w-3xl mx-auto">{{ benefitsSection.subtitle }}</p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for benefit in benefits %}
            <div class="text-center p-8">
                <div class="text-6xl mb-5">{{ benefit.icon }}</div>
                <h4 class="text-xl font-bold text-gray-900 mb-3">{{ benefit.title }}</h4>
                <p class="text-gray-600">{{ benefit.description }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# Applications Section - Gradient cards #}
{% if applications %}
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-4 relative pb-4">
            {{ applicationsSection.title }}
            <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-gradient-to-r from-purple-500 to-purple-700"></span>
        </h2>
        <p class="text-center text-lg text-gray-600 mb-12 max-w-3xl mx-auto">{{ applicationsSection.subtitle }}</p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for app in applications %}
            <div class="p-10 rounded-2xl text-white hover:-translate-y-2 transition-transform duration-300" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h4 class="text-2xl font-bold mb-4">{{ app.title }}</h4>
                <p class="opacity-95 leading-relaxed">{{ app.description }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# CTA Section - Pink/Red gradient #}
{% if cta %}
<section class="py-20" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">{{ cta.title }}</h2>
        <p class="text-xl opacity-95 mb-10">{{ cta.description }}</p>
        <a href="{{ translations.urls.contact }}" class="inline-block px-12 py-4 bg-white text-pink-600 rounded-full font-bold text-lg hover:scale-105 transition-transform shadow-xl">
            {% if lang == 'tr' %}İletişime Geçin{% else %}Contact Us{% endif %}
        </a>
    </div>
</section>
{% endif %}
