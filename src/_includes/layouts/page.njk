---
layout: layouts/base.njk
---

{# Standard page layout with hero section support #}

{% if hero %}
{# Hero Section #}
<section class="pt-32 pb-20 gradient-bg relative overflow-hidden">
    {# Background decoration #}
    <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 left-10 w-72 h-72 bg-white rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-white rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center text-white">
            {% if hero.badge %}
            <div class="inline-block px-4 py-2 bg-white/20 rounded-full text-sm font-semibold mb-6 backdrop-blur-sm">
                {{ hero.badge }}
            </div>
            {% endif %}

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
                {{ hero.title | safe }}
            </h1>

            {% if hero.description %}
            <p class="text-xl mb-8 text-blue-100 max-w-3xl mx-auto">
                {{ hero.description }}
            </p>
            {% endif %}

            {% if hero.ctaPrimary or hero.ctaSecondary %}
            <div class="flex flex-wrap justify-center gap-4">
                {% if hero.ctaPrimary %}
                <a href="{{ hero.ctaPrimaryLink or '#contact' }}" class="bg-white text-blue-700 px-8 py-4 rounded-lg font-bold text-lg hover:bg-blue-50 transition-all hover:scale-105 shadow-xl">
                    {{ hero.ctaPrimary }}
                </a>
                {% endif %}
                {% if hero.ctaSecondary %}
                <a href="{{ hero.ctaSecondaryLink or '#products' }}" class="bg-transparent text-white px-8 py-4 rounded-lg font-bold text-lg border-2 border-white hover:bg-white hover:text-blue-700 transition-all">
                    {{ hero.ctaSecondary }}
                </a>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
</section>
{% endif %}

{# Page Content #}
<article class="{% if not hero %}pt-32{% endif %}">
    {% if not hero and title %}
    {# Simple page header without hero #}
    <div class="bg-gray-50 py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{{ title }}</h1>
            {% if description %}
            <p class="text-xl text-gray-600 max-w-3xl">{{ description }}</p>
            {% endif %}
        </div>
    </div>
    {% endif %}

    {# Main content area #}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-a:text-primary hover:prose-a:text-primary-700">
            {{ content | safe }}
        </div>
    </div>
</article>
