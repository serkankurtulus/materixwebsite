---
layout: layouts/base.njk
---

{# Chemical Product Detail Layout - Matches Original Design #}

{# Hero Section - Light gradient with product color #}
<section class="pt-32 pb-16 bg-gradient-to-b from-{{ product.color or 'green' }}-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
                {# Category Badge #}
                {% if product.category %}
                <div class="inline-block px-4 py-2 bg-{{ product.color or 'green' }}-100 rounded-full text-sm font-semibold text-{{ product.color or 'green' }}-700 mb-4">
                    {{ product.category }}
                </div>
                {% endif %}

                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4">
                    {{ product.name }}
                </h1>

                {% if product.subtitle %}
                <p class="text-xl md:text-2xl text-gray-700 font-semibold mb-4">
                    {{ product.subtitle }}
                </p>
                {% endif %}

                {% if product.tagline %}
                <p class="text-xl text-gray-600 mb-8">{{ product.tagline }}</p>
                {% endif %}

                {# Quick Info Boxes #}
                {% if product.quickInfo %}
                <div class="grid grid-cols-2 gap-4 mb-8">
                    {% for info in product.quickInfo %}
                    <div class="bg-white rounded-xl p-4 shadow-md">
                        <div class="text-sm text-gray-600 mb-1">{{ info.label }}</div>
                        <div class="font-bold text-gray-900">{{ info.value }}</div>
                    </div>
                    {% endfor %}
                </div>
                {% endif %}

                {# CTA Buttons #}
                <div class="flex flex-wrap gap-4">
                    <a href="{{ translations.urls.contact }}" class="btn-primary text-white px-8 py-4 rounded-lg font-bold text-lg">
                        {% if lang == 'tr' %}SipariÅŸ Ver{% else %}Order Now{% endif %}
                    </a>
                    <a href="{{ translations.urls.contact }}" class="border-2 border-{{ product.color or 'green' }}-700 text-{{ product.color or 'green' }}-700 px-8 py-4 rounded-lg font-bold text-lg hover:bg-{{ product.color or 'green' }}-700 hover:text-white transition-all">
                        {% if lang == 'tr' %}Daha Fazla Bilgi{% else %}More Info{% endif %}
                    </a>
                </div>
            </div>

            {# Product Image with Stats Card #}
            <div class="relative">
                <div class="aspect-square rounded-2xl overflow-hidden shadow-2xl">
                    {% if product.image %}
                    <img src="{{ product.image }}" alt="{{ product.name }}" class="w-full h-full object-cover">
                    {% else %}
                    <div class="w-full h-full bg-gradient-to-br from-{{ product.color or 'green' }}-500 to-{{ product.color or 'green' }}-700 flex items-center justify-center">
                        <span class="text-8xl text-white/50">{{ product.icon or 'ðŸ§´' }}</span>
                    </div>
                    {% endif %}
                </div>

                {# Stats Card #}
                {% if product.highlight %}
                <div class="absolute -bottom-6 -right-6 bg-white rounded-xl shadow-2xl p-6">
                    <div class="text-sm font-semibold text-{{ product.color or 'green' }}-700 mb-1">{{ product.highlight.label }}</div>
                    <div class="text-3xl font-bold text-gray-900">{{ product.highlight.value }}</div>
                    <div class="text-sm text-gray-600">{{ product.highlight.sublabel }}</div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{# Features Section - 2 Column with Icons #}
{% if features %}
<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-12">
            {% if lang == 'tr' %}Ã–zellik DetaylarÄ±{% else %}Feature Details{% endif %}
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
            {% for feature in features %}
            <div class="bg-gray-50 rounded-xl p-6 hover:-translate-y-1 transition-transform duration-300">
                <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-{{ feature.color or product.color or 'green' }}-100 rounded-lg flex items-center justify-center flex-shrink-0">
                        {% if feature.icon %}
                        <span class="text-xl">{{ feature.icon }}</span>
                        {% else %}
                        <svg class="w-6 h-6 text-{{ feature.color or product.color or 'green' }}-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        {% endif %}
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-900 mb-2">{{ feature.title }}</h3>
                        <p class="text-gray-700">{{ feature.description }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# Use Cases Section - 3 Cards with Emojis #}
{% if useCases %}
<section class="py-16" style="background: linear-gradient(135deg, {{ product.gradientFrom or '#dcfce7' }} 0%, {{ product.gradientTo or '#dbeafe' }} 100%);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
                {% if lang == 'tr' %}KullanÄ±m AlanlarÄ±{% else %}Usage Areas{% endif %}
            </h2>
            {% if useCasesSubtitle %}
            <p class="text-xl text-gray-600">{{ useCasesSubtitle }}</p>
            {% endif %}
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            {% for useCase in useCases %}
            <div class="bg-white rounded-2xl p-8 text-center hover:-translate-y-2 transition-transform duration-300 shadow-lg">
                <div class="text-5xl mb-4">{{ useCase.icon }}</div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">{{ useCase.title }}</h3>
                <p class="text-gray-600">{{ useCase.description }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# CTA Section - Gradient #}
<section class="py-16 gradient-bg">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
            {% if ctaTitle %}{{ ctaTitle }}{% else %}{% if lang == 'tr' %}{{ product.name }} ile Kolay Temizlik{% else %}Easy Cleaning with {{ product.name }}{% endif %}{% endif %}
        </h2>
        {% if ctaDescription %}
        <p class="text-xl mb-8 text-blue-100">{{ ctaDescription }}</p>
        {% endif %}
        <a href="{{ translations.urls.contact }}" class="inline-block bg-white text-blue-700 px-8 py-4 rounded-lg font-bold text-lg hover:bg-blue-50 transition-all hover:scale-105">
            {% if lang == 'tr' %}Hemen SipariÅŸ Ver{% else %}Order Now{% endif %}
        </a>
    </div>
</section>
