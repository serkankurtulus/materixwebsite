---
layout: layouts/base.njk
---

{# SSR Product Detail Layout - Matches Original Design #}

{# Hero Section - Light gradient with price card #}
<section class="pt-32 pb-16 bg-gradient-to-b from-blue-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
                {# Popular Badge #}
                {% if product.badge %}
                <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-100 rounded-full text-sm font-semibold text-green-700 mb-4">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    {{ product.badge }}
                </div>
                {% endif %}

                <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-4">
                    {{ product.name or title }}
                </h1>
                <p class="text-xl text-gray-600 mb-6">
                    {{ product.description or description }}
                </p>

                {# Feature Highlights with Checkmarks #}
                {% if product.highlights %}
                <div class="flex flex-wrap gap-4 mb-8">
                    {% for highlight in product.highlights %}
                    <div class="flex items-center gap-2 text-gray-700">
                        <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span class="font-semibold">{{ highlight }}</span>
                    </div>
                    {% endfor %}
                </div>
                {% endif %}

                {# Price Card #}
                {% if product.price %}
                <div class="bg-white rounded-2xl p-6 shadow-lg mb-8">
                    <div class="flex items-baseline gap-2 mb-4">
                        <span class="text-4xl font-bold text-blue-700">{{ product.price }}</span>
                        {% if product.priceUnit %}
                        <span class="text-gray-600">{{ product.priceUnit }}</span>
                        {% endif %}
                    </div>
                    {% if product.priceNote %}
                    <div class="text-sm text-gray-600 mb-4">
                        {{ product.priceNote }}
                    </div>
                    {% endif %}
                    <div class="flex gap-3">
                        <a href="/{{ lang }}/iletisim/" class="flex-1 btn-primary text-white py-4 rounded-lg font-bold text-lg text-center">
                            {% if lang == 'tr' %}Hemen SipariÅŸ Ver{% else %}Order Now{% endif %}
                        </a>
                        <a href="/{{ lang }}/iletisim/" class="btn-secondary bg-white px-6 py-4 rounded-lg font-bold">
                            {{ translations.common.getQuote }}
                        </a>
                    </div>
                </div>
                {% endif %}

                {# Stats Row #}
                {% if product.stats %}
                <div class="flex items-center gap-6 text-sm text-gray-600">
                    {% if product.stats.installations %}
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                        </svg>
                        <span>{{ product.stats.installations }} {% if lang == 'tr' %}Kurulum{% else %}Installations{% endif %}</span>
                    </div>
                    {% endif %}
                    {% if product.stats.rating %}
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                        <span>{{ product.stats.rating }} {% if lang == 'tr' %}MÃ¼ÅŸteri PuanÄ±{% else %}Customer Rating{% endif %}</span>
                    </div>
                    {% endif %}
                </div>
                {% endif %}
            </div>

            {# Product Image with ROI Card #}
            <div class="relative">
                <div class="aspect-square rounded-2xl overflow-hidden shadow-2xl">
                    {% if product.image %}
                    <img src="{{ product.image }}"
                         alt="{{ product.name or title }}"
                         class="w-full h-full object-cover">
                    {% else %}
                    <div class="w-full h-full bg-gradient-to-br from-blue-100 to-blue-200 flex items-center justify-center">
                        <span class="text-8xl">ðŸ”¬</span>
                    </div>
                    {% endif %}
                </div>
                {% if product.roi %}
                <div class="absolute -bottom-6 -right-6 bg-white rounded-xl shadow-2xl p-6 max-w-xs">
                    <div class="text-sm font-semibold text-blue-700 mb-1">{% if lang == 'tr' %}Ortalama ROI{% else %}Average ROI{% endif %}</div>
                    <div class="text-3xl font-bold text-gray-900">{{ product.roi }}</div>
                    {% if product.roiNote %}
                    <div class="text-sm text-gray-600">{{ product.roiNote }}</div>
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{# Key Benefits Section - 3 Gradient Cards #}
{% if product.keyBenefits %}
<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">{% if lang == 'tr' %}Neden {{ product.name }}?{% else %}Why {{ product.name }}?{% endif %}</h2>
            <p class="text-xl text-gray-600">{% if lang == 'tr' %}Profesyonel projelerde tercih edilen Ã¼stÃ¼n Ã¶zellikler{% else %}Superior features preferred in professional projects{% endif %}</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            {% for benefit in product.keyBenefits %}
            <div class="bg-gradient-to-br from-{{ benefit.color }}-50 to-white rounded-2xl p-8 hover-lift">
                <div class="w-14 h-14 bg-{{ benefit.color }}-100 rounded-xl flex items-center justify-center mb-4">
                    {% if benefit.icon %}
                    {{ benefit.icon | safe }}
                    {% else %}
                    <svg class="w-8 h-8 text-{{ benefit.color }}-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                    {% endif %}
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">{{ benefit.title }}</h3>
                <p class="text-gray-600">{{ benefit.description }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# Technical Specifications Section #}
{% if product.performanceSpecs or product.durabilitySpecs %}
<section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">{% if lang == 'tr' %}Teknik Ã–zellikler{% else %}Technical Specifications{% endif %}</h2>
            <p class="text-xl text-gray-600">{% if lang == 'tr' %}Profesyonel performans iÃ§in geliÅŸtirilmiÅŸ nano teknoloji{% else %}Nano technology developed for professional performance{% endif %}</p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            {# Performance Specs Card #}
            {% if product.performanceSpecs %}
            <div class="bg-white rounded-2xl p-8 shadow-lg">
                <h3 class="text-xl font-bold text-gray-900 mb-6">{% if lang == 'tr' %}Performans Ã–zellikleri{% else %}Performance Characteristics{% endif %}</h3>
                <div class="space-y-4">
                    {% for spec in product.performanceSpecs %}
                    <div class="flex justify-between items-center pb-4 border-b border-gray-100 {% if loop.last %}border-b-0 pb-0{% endif %}">
                        <span class="text-gray-700 font-medium">{{ spec.label }}</span>
                        <span class="text-{{ spec.color or 'blue' }}-700 font-bold">{{ spec.value }}</span>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            {# Durability Specs Card #}
            {% if product.durabilitySpecs %}
            <div class="bg-white rounded-2xl p-8 shadow-lg">
                <h3 class="text-xl font-bold text-gray-900 mb-6">{% if lang == 'tr' %}DayanÄ±klÄ±lÄ±k{% else %}Durability{% endif %}</h3>
                <div class="space-y-4">
                    {% for spec in product.durabilitySpecs %}
                    <div class="flex justify-between items-center pb-4 border-b border-gray-100 {% if loop.last %}border-b-0 pb-0{% endif %}">
                        <span class="text-gray-700 font-medium">{{ spec.label }}</span>
                        <span class="text-{{ spec.color or 'green' }}-600 font-bold">{{ spec.value }}</span>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>

        {# Application Details Grid #}
        {% if product.applicationDetails %}
        <div class="mt-8 bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="text-xl font-bold text-gray-900 mb-6">{% if lang == 'tr' %}Uygulama DetaylarÄ±{% else %}Application Details{% endif %}</h3>
            <div class="grid md:grid-cols-4 gap-6">
                {% for detail in product.applicationDetails %}
                <div class="text-center">
                    <div class="text-3xl font-bold text-{{ detail.color or 'blue' }}-600 mb-2">{{ detail.value }}</div>
                    <div class="text-sm text-gray-600">{{ detail.label }}</div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</section>
{% endif %}

{# Application Process Section - Numbered Circles #}
