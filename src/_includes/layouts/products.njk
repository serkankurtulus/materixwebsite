---
layout: layouts/base.njk
---

{# Products List Layout - Matches Original urunlerimiz.html Design #}

{# Hero Section - Purple gradient with wave pattern #}
<section class="pt-32 pb-20 relative overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    {# Wave pattern overlay #}
    <div class="absolute inset-0">
        <svg class="absolute bottom-0 w-full" viewBox="0 0 1440 320" preserveAspectRatio="none">
            <path fill="rgba(255,255,255,0.1)" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,149.3C960,160,1056,160,1152,138.7C1248,117,1344,75,1392,53.3L1440,32L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
        </svg>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center text-white">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
                {{ hero.title }}
            </h1>
            {% if hero.description %}
            <p class="text-xl md:text-2xl max-w-3xl mx-auto opacity-95">
                {{ hero.description }}
            </p>
            {% endif %}
        </div>
    </div>
</section>

{# Intro Section - Gray background #}
{% if intro %}
<section class="py-20 bg-gray-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">{{ intro.title }}</h2>
        <p class="text-lg text-gray-600 leading-relaxed">{{ intro.description }}</p>
    </div>
</section>
{% endif %}

{# Products Grid Section #}
{% if products %}
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-4 relative pb-4">
            {{ productsSection.title }}
            <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-gradient-to-r from-purple-500 to-purple-700"></span>
        </h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10 mt-16">
            {% for product in products %}
            <div class="bg-white rounded-2xl overflow-hidden shadow-xl hover:-translate-y-2 transition-all duration-300">
                {# Product Header - Purple gradient #}
                <div class="p-8 text-center text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="text-2xl font-bold mb-2">{{ product.code }}</div>
                    <div class="text-lg opacity-95">{{ product.name }}</div>
                </div>

                {# Product Body #}
                <div class="p-8">
                    <p class="text-gray-600 leading-relaxed mb-6">{{ product.description }}</p>

                    {# Feature Tags #}
                    {% if product.features %}
                    <div class="flex flex-wrap gap-2 mb-6">
                        {% for feature in product.features %}
                        <span class="inline-block bg-gray-100 text-purple-600 px-4 py-2 rounded-full text-sm">
                            {{ feature }}
                        </span>
                        {% endfor %}
                    </div>
                    {% endif %}

                    {# Link Button #}
                    {% if product.link %}
                    <a href="{{ product.link }}" class="inline-block px-6 py-3 rounded-full text-white font-semibold hover:scale-105 transition-transform" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                        {% if lang == 'tr' %}Detayları Gör{% else %}View Details{% endif %}
                    </a>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# Surface Cleaner Section #}
{% if surfaceCleaner %}
<section class="py-16 bg-gray-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white p-10 md:p-12 rounded-2xl shadow-lg">
            <h3 class="text-2xl md:text-3xl font-bold text-purple-600 mb-6">{{ surfaceCleaner.title }}</h3>
            <p class="text-lg font-semibold text-gray-800 mb-4">{{ surfaceCleaner.subtitle }}</p>
            <p class="text-gray-600 leading-relaxed">{{ surfaceCleaner.description }}</p>
        </div>
    </div>
</section>
{% endif %}

{# Collaboration Section - Dark background #}
{% if collaboration %}
<section class="py-20" style="background: linear-gradient(135deg, #0f3460 0%, #16213e 100%);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-8">{{ collaboration.title }}</h2>
        {% for paragraph in collaboration.content %}
        <p class="text-xl text-gray-300 leading-relaxed mb-4">{{ paragraph }}</p>
        {% endfor %}
        <a href="{{ translations.urls.contact }}" class="inline-block mt-8 px-10 py-4 bg-cyan-400 text-gray-900 rounded-full font-bold text-lg hover:scale-105 transition-transform hover:shadow-xl" style="box-shadow: 0 10px 30px rgba(0,212,255,0.3);">
            {% if lang == 'tr' %}İletişime Geçin{% else %}Contact Us{% endif %}
        </a>
    </div>
</section>
{% endif %}
